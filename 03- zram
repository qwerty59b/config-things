sudo apt install zram-tools


sudo nano /etc/default/zramswap # y cambiar 

ALGO=zstd
PERCENTAGE=20 # si tienes 8gb de ram o menos valor=50
PRIORITY=100

Guardar y salir

sudo systemctl restart zramswap

sudo nano /etc/sysctl.d/99-zram-tweaks.conf

vm.swappiness = 180
vm.watermark_boost_factor = 0
vm.watermark_scale_factor = 125
vm.page-cluster = 0

Guardar y salir

sudo sysctl --system 


cat /proc/swaps  # verificar si esta ok


sudo zramctl  # ver el uso

